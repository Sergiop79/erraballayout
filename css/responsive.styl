@media screen and (max-width:1024px)
	#menu-botoia
		display inline-block
		margin-left 1em
		margin-bottom 1em
		
	.menu-nagusia
		display none
	
@media screen and (max-width:982px)
	body
		width 100%
	#albo-barra
		width 93%
	#wrapper
		width 97%
	#edukia
		margin-left 2%
		width 96%
		.albistea
			width 100%
			.albiste-irudia
				margin-right 1%
				width 20%
			.audio-player
				width 300px
				margin-left 28%
@media screen and (max-width:966px)
	.disko-fitxa
		width 70%
@media screen and (max-width:902px)
	#albo-barra
		width 90%
	#albiste-zerrenda
		.albistea
			.albiste-irudia
				width 20%
			.deskribapena
				width 70%
@media screen and (max-width:770px)
	#hemeroteka-zerrenda
		.zerrenda
			column-count 2
	#logoa
		margin-left 10%

	.albiste-irudia
		width 40%

	.deskribapena
		width 60%
	.albiste-irudia, .deskribapena
		display inline-block
		vertical-align middle
	.sare-sozialak
		margin-right 10%
@media screen and (max-width:700px)
	#artista-edukia
		width 90%
		.artista-aurkezpena
			.artista-irudia
				float none
				margin 0 auto
				width 100%
	.artista-menua
		width 100%
@media screen and (max-width:632px)
	body
		background-color white
		width 95%
	#edukia
		width 90%
		margin-left 3%
		.albistea
			.albiste-irudia
				width 30%
			.deskribapena
				60%

@media screen and (max-width:626px)
	#logoa, .sare-sozialak
		display inline-block
		vertical-align top
		margin 0.5em auto
	.burua
		margin-left 5%
@media screen and (max-width:600px)
	#albiste-zerrenda
		.albistea
			.albiste-irudia
				width 40%
			.deskribapena
				width 50%
	.albiste-bakarra
		.albiste-irudia
			width 30%
	.disko-fitxa
		figure
			width 80%
	
@media screen and (max-width:487px)
	#artista-edukia
		.artista-hemeroteka
			column-count 1
	#hemeroteka-zerrenda
		.zerrenda
			column-count 1
	#logoa
		margin-left 28%
	.sare-sozialak
		margin-left 15%
	#logoa, .sare-sozialak
		float none
	#albiste-zerrenda
		.albistea
			.albiste-irudia
				width 100%
			.deskribapena
				width 100%
	.audio-player
		margin-left 14%
	.albiste-bakarra
		.deskribapena, .albiste-irudia
			width 100%
	.disko-fitxa
		figure
			width 99%
@media screen and (max-width:414px)
	body
		width 90%
	#edukia
		.albistea
			.albiste-irudia, .deskribapena
				width 100%
			.audio-player
				margin-left 0
@media screen and (max-width:321px)
	#wrapper
		max-width 100%
	#artista-edukia
		.artista-irudia
			float 
			margin 0 auto
	#albo-barra
		margin 5%
	#logoa
		margin-left 25%
	.sare-sozialak
		margin-left 6%
	.burua
		margin 0
	.botoia
		margin-top 0.5em
