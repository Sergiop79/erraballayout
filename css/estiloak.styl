// mixins
transition()
	-webkit-transition arguments
	-moz-transition arguments
	transition arguments

column-count()
	-webkit-column-count arguments
	-moz-column-count arguments
	column-count arguments


// koloreak
baltza = #040000
gris_iluna = #283744
gris_klarua = #F9F5F5
gorria = #ED1C2F

@import "icons.css"
@import "owl.carousel.css"
@import "owl.theme.css"
@import "audioplayer.css"
@import "sm-core-css.css"
@import "sm-simple.css"

a
	color baltza
	text-decoration none
	transition all 0.25s linear
	&:hover
		color gorria
		text-decoration underline
body
	background baltza
	font-family 'Source Sans Pro', sans-serif

footer
	padding 2em
	text-align center
input
	border 1px solid #D8D8D8
	outline 0
	
input.zabala
	padding 10px
	&.botoia
		display inline-block
		&:hover
			background baltza


img, video, embed, iframe
	max-width 100%

#agenda
	a
		color gorria
#albo-barra
	margin 0 2em
	max-width 100%
#albiste-zerrenda
	.albistea
		margin 1em auto
		width 95%
		.albiste-irudia
			width 15%
		.deskribapena
			width 75%
		.audio-player
			width 300px
			margin 0.2em auto
#bilaketa
	fieldset
		width 94.1%
		border 1px solid #cdcdcd
		margin 0
		padding 0

#edukia
	margin-left 5%
	width 53%
	.albiste-gehiago
		margin-top .5em
		padding .5em 1em
		a
			color white
		a:hover
			text-decoration none

#owl-example
	.item	
		//margin 10px
		text-align center

#hizkuntza-menua
	ul
		margin 0
		li
			display inline-block
			margin-right 1em


#logoa
	width 150px
	margin-left 20%

#logoa, .sare-sozialak
	display inline-block
	vertical-align top

#s
	width 83.8%
	background-color #fff
	border 0
	float left
	font-size 14px
	padding 12px 0 12px 0
	text-indent 10px
	border-right 0

#menu-botoia
	font-size 1.5em
	padding 0.5em
	cursor pointer
	display none

#wrapper
	max-width 1024px
	min-width 320px
	margin 0 auto
	background white

#edukia, #albo-barra
	display inline-block
	vertical-align top

#scrollUp
	bottom 20px
	right 20px
	height 38px
	width 38px
	background url(../img/top.png) no-repeat

#disko-zerrenda
	text-align center
.albistea
	padding-bottom 1em
	border-bottom solid 2px baltza
.albiste-bakarra
	width 95%
	margin 0 auto
	.albiste-irudia
		width 25%
	.audio-player
		width 300px
		margin 0.5em auto
.albiste-irudia
	margin-right 0.5em
	width 30%
.audio-player
	width 75%
.bidea
	padding .25em
	background-color gris_klarua
	font-size 0.9em
	color gris_iluna
	a
		color gorria
		text-decoration none
	a:hover
		text-decoration underline
	ul
		li
			display inline-block
			.banatzailea
				margin 0 .2em
.buletina-widget
	max-width 100%	
.burua
	display inline-block
	width 100%
.deskribapena
	width 66%
	p
		margin 0.5em 0
.disko-zerrenda
	display inline-block
	margin auto
	.disko-azala
		display inline-block
		vertical-align top
		width 300px
		margin 0.5em
		padding 0.2em
		border solid #cccccc 1px
		figcaption
			padding 0 0.5em
			p
				margin 0.2em 0
				text-align left
		img
			height 300px
.gehiago
	a
		color gorria
.paginator
	text-align center
	ul
		padding 0
		li
			display inline-block
			vertical-align middle
			a
				text-decoration none
		li:first-child
			margin-right 1em
		li:last-child
			margin-left 1em
.sare-sozialak
	float right
	margin-right 20%
	width 300px
	ul
		li
			display inline-block
			margin-right 1em
			a
				&:hover
					text-decoration none
					.icon-twitter:hover
						color #48B6FF
					.icon-facebook:hover
						color #3B5998
					.icon-feed:hover
						color #FF9C2A
				i
					font-size 2em

.titulua
	color gorria
	margin-left 1em
	text-align left
.botoia
	border none
	background-color gorria
	color white
	display inline-block
	transition all 0.25s linear
	&:hover
		background-color baltza

.sbutton
	border none	
	background-color gorria
	margin-right 0
	color white
	display inline-block
	float right
	padding 10px
	i
		font-size 1.2em

.menu-nagusia
	font-size 1.3em	
	margin-bottom 1em

.albiste-irudia, .deskribapena
	display inline-block
	vertical-align top
.buletina-widget, .irratia, .agenda
	margin-bottom 1em
@import "responsive.styl"
